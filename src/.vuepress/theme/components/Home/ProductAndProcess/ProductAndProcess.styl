.product-and-process
  margin 6em 0 0
  padding 3em 0
  background-color #459774
  background-image linear-gradient(to right, #979797, #171717), url('@/public//assets/img/site/home/winder-bl.svg')
  background-position left top, left bottom -5px
  background-size cover, contain
  background-repeat no-repeat
  color #fff
  background-blend-mode soft-light, normal

  .picture
    position relative
    top 1em

    @media screen and (max-width 1200px)
      display none

    img
      display block
      margin 0 auto
      padding-left 1em
      width 100%

  .text-container
    position relative
    right 1em
    margin-bottom 3em
    padding 0 2em

    .section-title
      margin-bottom 0
      text-transform uppercase
      letter-spacing 0
      font-weight 700
      font-size 2.6em
      line-height 1.3

      @media screen and (max-width 640px)
        font-size 2em

    .design-process
      display block
      margin 1em 0
      font-weight 700
      font-size .85em

    h1, h2, h3, p
      color inherit

    p
      font-weight 600

@media screen and (prefers-color-scheme dark)
  .product-and-process
    background-color unset !important
    background-image none !important

    .picture
      filter brightness(60%) contrast(110%)

    .section-title
      color #bcbcbc

    .text-container
      color #bcbcbc
@require '@/styles/_variables'

.about
  position relative
  margin -4em 0 4em
  outline 0
  color #333 // TODO: Check usage

  @media screen and (prefers-color-scheme dark)
    color $textColor_dark

  .inner-container
    margin 0 auto
    max-width 920px

  .picture
    padding 0 2em

    .polaroid-container
      .caption
        text-transform uppercase
        font-weight 500
        font-size 1.2em

      @media screen and (prefers-color-scheme dark)
        border 2px solid #112
        background-color unset
        box-shadow none

  .text-container
    margin-top 5em
    padding 0 2em

    @media screen and (min-width 640px)
      margin-top 6em

    h1
      margin 0
      text-transform uppercase
      font-weight 600
      font-size 2.2em

  .grid-x:not(:first-of-type)
    margin-top 2em
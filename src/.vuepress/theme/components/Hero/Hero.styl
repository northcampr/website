$contact-bar-height = 25px
$navigation-bar-height = 75px
$site-header-height = $contact-bar-height + $navigation-bar-height
$hero-height = calc(66vh - $site-header-height)
$hero-height-on-overview-pages = 'calc(50vh - %s)' % $site-header-height

.big-hero
  display grid
  margin-bottom 5em
  height 25vh
  outline 0
  background-image var(--image)
  background-position bottom
  background-size cover
  background-repeat no-repeat
  color #fff
  text-shadow 1px 1px 5px rgba(150, 150, 150, .33)
  font-family 'Source Sans Pro', Helvetica, Arial, sans-serif
  place-items center

  &.big
    height 50vh

    @media screen and (max-width 640px)
      height 33vh

  @media screen and (max-width 640px)
    margin-bottom 2em
    height 'calc(33vh - %s)' % $site-header-height

  @media screen and (prefers-color-scheme dark)
    background-color #393939 !important
    background-image var(--image-dark)
    background-blend-mode overlay

    .text-container
      .title, .subtitle
        color #eee

  .text-container
    padding 0 1em

    .title
      color #fff

    h1, h2, h3
      text-transform uppercase
      text-shadow 0 0 .05em rgba(0, 0, 0, .25)
      font-family inherit

    h1
      margin-bottom 0
      font-weight 700
      font-size 2.25em

      @media screen and (max-width 640px)
        margin-bottom .25em
        font-size 1.5em

    h2
      margin-bottom .25em
      font-weight 700
      font-size 2.5em

      @media screen and (max-width 640px)
        margin-bottom .5em
        font-size 1.5em

    h3
      text-transform uppercase
      font-weight 700
      font-size .95em

      @media screen and (max-width 640px)
        font-size .95em

        &.hasimage, &.hasimage img
          max-height 33vh
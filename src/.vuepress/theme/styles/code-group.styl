@import '_variables'

.code-group__nav
  margin-top .85rem
  // 2 * margin + border-radius of <pre> tag
  margin-bottom calc(-1.7rem - 6px)
  padding-top 10px
  padding-bottom calc(1.7rem - 6px)
  padding-left 10px
  border-top-left-radius 6px
  border-top-right-radius 6px
  background-color $codeBgColor

.code-group__ul
  display inline-flex
  margin auto 0
  padding-left 0
  list-style none

.code-group__nav-tab
  padding 5px
  border 0
  background-color transparent
  color rgba(255, 255, 255, .9)
  font-weight 600
  font-size .85em
  line-height 1.4
  cursor pointer

.code-group__nav-tab:focus
  outline none

.code-group__nav-tab-active
  border-bottom $accentColor 1px solid

@media (max-width $MQMobileNarrow)
  .code-group__nav
    margin-right -1.5rem
    margin-left -1.5rem
    border-radius 0

/**
 * code-group-item
 */
.code-group-item
  display none

.code-group-item__active
  display block

.code-group-item > pre
  background-color orange
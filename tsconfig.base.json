{
  "include": ["**/*.ts", "**/*.vue"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["DOM", "ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018",  
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/theme/*": [
        "src/.vuepress/theme/*"
      ],
      "@/components/*": [
        "src/.vuepress/theme/components/*",
      ],
      "@/styles/*": [
        "src/.vuepress/theme/styles/*"
      ],
      "@/public/*": [
        "src/.vuepress/public/*"
      ],
      "@/types/*": [
        "src/.vuepress/theme/types/*"
      ]
    }
  }
}